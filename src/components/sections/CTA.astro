---
import Container from "../shared/Container.astro";
import BamButton from "../shared/BamButton.astro";
import GradiantText from "../shared/GradiantText.astro";
import Paragraph from "../shared/Paragraph.astro";

export interface Props {
  className?: string;
}

const { className } = Astro.props;
---

<section id="cta" class=`pb-20 ${className}`>
  <Container>
    <div
      class="w-full relative py-8 md:py-10 px-6 md:px-8 rounded-2xl bg-gradient-to-br from-slate-100 to-zinc-200 dark:from-slate-800 dark:to-zinc-800"
    >
      <div class="mx-auto text-center max-w-xl md:max-w-2xl relative">
        <h1
          class="text-3xl/tight sm:text-4xl/tight md:text-5xl/tight
          font-bold text-heading-1"
        >
          Ready to <GradiantText>turn</GradiantText> your<br/> real estate <GradiantText>website</GradiantText> into a<br/><GradiantText>lead-generating</GradiantText> machine?
        </h1>
        <Paragraph className="pt-10 font-semibold">
          Accelerate Your Real Estate Business with a Website That attracts and Converts!
        </Paragraph>
        <div class="mx-auto max-w-md sm:max-w-xl pt-10">
          <BamButton />
        </div>
      </div>
    </div>
  </Container>
</section>
